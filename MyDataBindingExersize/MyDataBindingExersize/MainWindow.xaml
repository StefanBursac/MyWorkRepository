<Window x:Class="MyDataBindingExersize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDataBindingExersize"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
        <TextBlock Name="Name" Text="Full Name:"/>
        <TextBlock Name="DisplayFirstName" Text="{Binding firstName}" />
        <TextBlock Name="DisplayLastName" Text="{Binding lastName}"/>
           </StackPanel>
           
            <Button Name="changeName" Content="Change" HorizontalAlignment="left" Height="20" Margin="5" Click="changeName_Click"/>

        </StackPanel>
    
    
    
    </Grid>
    
    
</Window>
