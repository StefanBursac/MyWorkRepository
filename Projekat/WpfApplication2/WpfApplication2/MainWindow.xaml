<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="219*"/>
            <ColumnDefinition Width="298*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="18" Margin="75,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Your Name" VerticalAlignment="Top" Width="60" Height="18"/>
        <RadioButton x:Name="Male" Content="Male" HorizontalAlignment="Left" Margin="81,33,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Female" Content="Female" HorizontalAlignment="Left" Margin="131,33,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Margin="91,63,0,0" VerticalAlignment="Top" Width="88" Click="button_Click"/>

    </Grid>
</Window>
